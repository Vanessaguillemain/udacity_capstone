<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyToolbarTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/MyToolbarTheme"
            app:title="@string/title_modify"
            app:elevation="40dp"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/layoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:layout_marginEnd="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title : "/>

            <EditText
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:layout_marginEnd="@dimen/border_margin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/border_margin"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/labelPageCount"
                style="@style/SubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total pages : " />
            <EditText
                android:id="@+id/valuePageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </LinearLayout>

        <!-- WANT TO READ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:layout_marginEnd="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelWantToRead"
                style="@style/SubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to read : " />
            <TextView
                android:id="@+id/valueNbPagesToRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/labelNbPagesToRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text=" Pages"/>
        </LinearLayout>

        <!-- FROM PAGE TO PAGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelFromPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From page : "/>
            <EditText
                android:id="@+id/tvFromPage"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                tools:text="220"/>
            <TextView
                android:id="@+id/labelToPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To page : "/>

            <EditText
                android:id="@+id/tvToPage"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                tools:text="250"/>
        </LinearLayout>

        <!-- ESTIMATED TIME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelEstimated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated time : "/>
            <TextView
                android:id="@+id/valueTimeEstimated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>

        <!-- PLANNING -->
        <TextView
            android:id="@+id/labelPlanning"
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:text="I want to plan reading : "/>
        <!-- from date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From date : "/>
            <TextView
                android:id="@+id/labelSelectFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick a date"/>
            <Button
                android:id="@+id/btnCalendarFrom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_calendar"/>
            <TextView
                android:id="@+id/labelErrorFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="From is after To"
                android:visibility="invisible"/>
        </LinearLayout>
        <!-- to date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To date : "/>
            <TextView
                android:id="@+id/labelSelectToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick a date"/>
            <Button
                android:id="@+id/btnCalendarTo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_calendar"/>
            <TextView
                android:id="@+id/labelErrorToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="To is before from"
                android:visibility="invisible"/>
        </LinearLayout>

        <!-- FREQUENCY -->
        <TextView
            android:id="@+id/labelFrequency"
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:text="Read Freaquency for this book : "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobtn_bck"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Mo" />

            <CheckBox
                android:id="@+id/cbx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radiobtn_bck"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Tu" />

            <CheckBox
                android:id="@+id/cbx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radiobtn_bck"
                android:checked="true"
                android:gravity="center"
                android:button="@null"
                android:text="We" />

            <CheckBox
                android:id="@+id/cbx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radiobtn_bck"
                android:checked="true"
                android:gravity="center"
                android:button="@null"
                android:text="Th" />

            <CheckBox
                android:id="@+id/cbx5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radiobtn_bck"
                android:checked="true"
                android:gravity="center"
                android:button="@null"
                android:text="Fr" />
            <CheckBox
                android:id="@+id/cbx6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radiobtn_bck"
                android:gravity="center"
                android:button="@null"
                android:text="Sa" />
            <CheckBox
                android:id="@+id/cbx7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radiobtn_bck"
                android:gravity="center"
                android:button="@null"
                android:text="Su" />

        </LinearLayout>

        <!-- ESTIMATION -->
        <TextView
            android:id="@+id/labelEstimation"
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:text="Estimation : "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About : "/>
            <TextView
                android:id="@+id/aboutNbPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_margin"
            android:layout_marginEnd="@dimen/border_margin"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonSave"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:elevation="4dp"
                android:theme="@style/DetailButton"
                android:text="Submit"/>

            <Button
                android:id="@+id/buttonDelete"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:elevation="4dp"
                android:text="Delete"
                android:theme="@style/DetailButton"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>