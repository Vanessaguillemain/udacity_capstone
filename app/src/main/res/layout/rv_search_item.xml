    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/card_resting_elevation"
        card_view:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:orientation="vertical">

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/imageBook_search"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/books_image_width_little"
                android:layout_height="@dimen/books_image_height_little"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:transitionName="@string/transition_photo"
                android:layout_margin="4dp"
                android:contentDescription="@string/desc_book_image" />
            <TextView
                android:id="@+id/tvBookTitle_search"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_search_tv_title"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tvBookPageCount_search"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_search_tv_pages"
                android:textSize="10sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
